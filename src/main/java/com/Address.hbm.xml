<?xml version = "1.0" encoding = "utf-8"?>
<!DOCTYPE hibernate-mapping PUBLIC 
"-//Hibernate/Hibernate Mapping DTD//EN"
"http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd"> 

<hibernate-mapping>

   <class name = "com.ideas2it.project.model.Address" table = "address">
      
      <many-to-one name = "employee" class = "com.ideas2it.project.model.Employee">
          <column name = "employee_id" />
      </many-to-one>
      
      <property name = "doorNo" column = "door_no" type = "string"/>
      <property name = "landMark" column = "landmark" type = "string" />
      <property name = "street" column = "street" type = "string" />
      <property name = "city" column = "city" type = "string"/>
      <property name = "pincode" column = "pincode" type = "long" />
      
      <id name = "addressId" type = "int" column = "id">
         <generator class="native"/>
      </id>

    </class>

</hibernate-mapping>
