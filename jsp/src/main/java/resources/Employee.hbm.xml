<?xml version="1.0" encoding = "UTF-8"?>
<!DOCTYPE hibernate-mapping PUBLIC 
"-//Hibernate/Hibernate Mapping DTD//EN"
"http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">

<hibernate-mapping>

    <class name = "com.ideas2it.project.model.Employee" table = "employee">
    
    <meta attribute = "class-description">
        This class contains the employee details
    </meta>
     
    <id name = "id" type = "integer" column = "id">
        <generator class = "native"/>
    </id>
    
    <property name = "name" column = "name" not-null="true" type = "string"/>
    <property name = "email" column = "email" not-null="true" type = "string"/>
    <property name = "dob" column = "dob" not-null="true" type = "LocalDate"/>
    <property name = "salary" column = "salary" not-null="true" type = "float"/>
    <property name = "contact" column = "phone_number" not-null="true" type = "long"/>
    
    <list name = "address" cascade = "all-delete-orphan" table = "address">
        <key column = "employee_id" />
        <list-index column = "idx"/>
        <one-to-many class = "com.ideas2it.project.model.Address"/>
    </list>
    
    <set name="projects" table="employee_project">
            <key column="employee_id"/>
            <many-to-many column= "project_id" class="com.ideas2it.project.model.Project" />
        </set>
    </class>
    
</hibernate-mapping>
        

